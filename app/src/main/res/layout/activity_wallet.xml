<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_gradient"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".module.DetailActivity">

    <LinearLayout
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="6dp"
        android:fitsSystemWindows="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:layout_width="9dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11.5dp"
            android:text="Wallet"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="312dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="56dp"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="274dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:text="Cover"
                android:textColor="@color/grey_dark"
                android:textSize="16sp"
                android:layout_marginLeft="8dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="14dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_wallet1"
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    android:background="@null"
                    android:outlineProvider="bounds"
                    android:padding="1dp"
                    android:src="@drawable/cover_wallet1"
                    android:tag="0" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="0dp" />

                <ImageView
                    android:id="@+id/image_wallet2"
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    android:background="@null"
                    android:outlineProvider="bounds"
                    android:padding="1dp"
                    android:src="@drawable/cover_wallet2"
                    android:tag="1" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="0dp" />

                <ImageView
                    android:id="@+id/image_wallet3"
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    android:background="@null"
                    android:outlineProvider="bounds"
                    android:padding="1dp"
                    android:src="@drawable/cover_wallet3"
                    android:tag="2" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Name"
                android:textColor="@color/grey_dark"
                android:textSize="16sp"
                android:layout_marginLeft="8dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginTop="14dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <ImageView
                    android:id="@+id/icon_pen"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:src="@drawable/ic_pen" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/grey" />

                <EditText
                    android:id="@+id/edit_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@+id/icon_pen"
                    android:background="@null"
                    android:backgroundTint="@color/grey"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:singleLine="true"
                    android:textColor="@color/grey" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_cancel"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/frame_long_blue2"
                    android:gravity="center"
                    android:text="Cancel"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/btn_ok"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:background="@drawable/frame_long_blue2"
                    android:gravity="center"
                    android:text="OK"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="116dp"
        android:background="@color/white" />

</RelativeLayout>