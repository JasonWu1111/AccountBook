<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="170dp"
    android:layout_height="74dp"
    android:layout_marginLeft="2dp"
    android:layout_marginTop="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginBottom="9.5dp"
    app:cardCornerRadius="4dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_cover"
                android:layout_width="85.4dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/cover_wallet2"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:orientation="vertical"
                android:paddingStart="10dp"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:id="@+id/text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Wallet 1"
                    android:textColor="@color/grey_dark"
                    android:textSize="14dp"
                    tools:ignore="HardcodedText,SpUsage" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/starting_time"
                    android:textColor="@color/light_grey3"
                    android:textSize="11dp"
                    tools:ignore="SpUsage" />

                <TextView
                    android:id="@+id/text_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="07/22/2018"
                    android:textColor="@color/light_grey3"
                    android:textSize="11dp"
                    tools:ignore="HardcodedText,SpUsage" />

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/state_chosen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/frame_long_blue3"
            android:visibility="invisible">

            <ImageView
                android:layout_width="11dp"
                android:layout_height="12dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_label"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/state_change"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.4"
                android:background="@color/black"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/btn_modify"
                android:layout_width="32dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="28dp"
                android:padding="5dp"
                android:src="@drawable/ic_modify"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/btn_delete"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="28dp"
                android:padding="5dp"
                android:src="@drawable/ic_delete"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

    </FrameLayout>

</androidx.cardview.widget.CardView>
